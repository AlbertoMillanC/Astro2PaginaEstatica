---
import feature from "../../config/feature.json";
---

<h1 class="text-center fond-bold text-5xl mt-10">Features</h1>

<div class="grid md:grid-cols-3 gap-4 p-4">
  {
    feature.map((feature) => (
      <div class="bg-slate-800 p-10 rounded-x1 ">
        <h2 class="text-2xl font-bold my-4 ">{feature.title}</h2>
        <p>
          {feature.descrption}
        </p>
      </div>
    ))
  }
</div>
